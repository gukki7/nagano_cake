<div class = col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0>
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
  <%= f.label :last_name, "姓" %><br>
  <%= f.text_field :last_name %>
  </div>

  <div class="field">
  <%= f.label :first_name, "名" %><br>
  <%= f.text_field :first_name %>
  </div>

  <div class="field">
  <%= f.label :last_name_kana, "セイ" %><br>
  <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
  <%= f.label :first_name_kana, "メイ" %><br>
  <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号" %><br>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード（６文字以上）" %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h3>会員登録がお済みの方</h3>
  <%= link_to "こちら", new_customer_session_path %>
  <strong>からログインを行ってください。</strong>

</div>