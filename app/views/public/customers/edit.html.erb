<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>会員情報編集</h2>
<% if @customer.errors.any? %>
  <%= @customer.errors.count %>error
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
<% end %>
  </ul>

<%= form_with model: @customer do |f| %>
<div class = "form-group">
  <label for="inputName">Name</label>
 <div> <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></div>
</div>
<div class = "form-group">
  <label for="inputImage">Image</label>
 <div> <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
</div>
<div class = "form-group">
  <label for="inputName">Introduction</label>
 <div> <%= f.text_area :introduction, autofocus: true, id:"inputName", placeholder:"Introduction"%></div>
</div>
  <%= f.submit "Update Customer" %>
<% end %>
    </div>
  </div>
</div>