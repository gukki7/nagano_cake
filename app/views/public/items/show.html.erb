<div class="row">
	<div class="col-xs-5 mx-auto">
		<%= form_for(@cart_item , url: public_cart_items_path(item_id: @item), method: :post) do |form| %>
		<p><%= image_tag @item.get_item_image(100, 100) %></p>
		<h3><%= @item.name %></h3>
		<p><%= @item.introduction %></p>
		<p class="item-content2", style="font-family: arial black">¥ <%= @item.price %> 
		<input placeholder"個数選択"min="1"max="20"type="number"name="cart_item[amount]"id="cart_item_amount">
		<p><%= form.submit "カートに入れる", class:"btn btn-primary" %></p>
		<% end %>
	</div>
</div>