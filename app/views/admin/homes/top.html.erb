<h2 class="admin-homes-top-title mx-auto">管理者画面</h2>

<div class="row admin-homes-top-message mx-auto">
  <span class="col-xs-3">本日の注文件数</span>
  <span class="col-xs-9">
    <%= link_to @orders.count, admin_root_path %>件
  </span>
</div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 mx-auto">
      <h2>注文一覧</h2>


    <div class="order-table">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order) %></td>
              <td><%= order.customer.last_name + "　" + order.customer.first_name %></td>
              <td><%= order.order_details.sum(:amount) %></td>
              <td><%= order.status %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>